<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_condition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.isteam.sleepapp.Activity.ConditionDetailActivity"
    android:background="@color/colorWhite"
    android:padding="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tv_title"
        android:textColor="@color/colorText"
        android:text="수면 관리"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorText"
        android:id="@+id/title_bar"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bottom_layout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_above="@+id/linearLayout3"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button1"
                android:id="@+id/imageButton"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/main_button1" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button2"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/main_button2" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button3"
                android:id="@+id/imageButton3"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:clickable="false"
                android:src="@drawable/main_button3" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button4"
                android:id="@+id/imageButton4"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/main_button4"
                android:tint="@color/colorPrimary"
                android:clickable="false" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:visibility="invisible"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:visibility="invisible"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:visibility="visible"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="Last Sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="@android:color/black" />


    <!-- 그래프 시작 -->
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp">

        <ImageView
            android:src="@drawable/very_bad"
            android:background="#00FFFFFF"
            android:id="@+id/condition_image"
            android:layout_width="170dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_height="180dp">

        </ImageView>

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/valueLayout">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/valueLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/grid_snowball"
        android:layout_height="180dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/very_nice_explain"
            android:id="@+id/iv_sleep_detail"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:tint="#00FFFFFF" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/detail_view_button"
            android:id="@+id/result_btn"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/detail_view_button" />
    </LinearLayout>

</RelativeLayout>
