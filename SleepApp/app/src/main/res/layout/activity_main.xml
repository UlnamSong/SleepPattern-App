<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.isteam.sleepapp.Activity.MainActivity"
    android:background="@color/colorWhite"
    android:padding="0dp">

    <ImageView
        android:layout_height="match_parent"
        app:srcCompat="@drawable/sleeplogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:cropToPadding="false"
        android:layout_above="@+id/bottom_layout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bottom_layout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_above="@+id/linearLayout3"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button1"
                android:id="@+id/ib_connect"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button2"
                android:id="@+id/ib_light"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button3"
                android:id="@+id/ib_temp"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/main_button4"
                android:id="@+id/ib_sleep"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_bg"
                android:scaleType="fitXY"
                android:layout_height="95dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:visibility="invisible"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:visibility="invisible"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:visibility="invisible"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
